<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activities.SignUpActivity">
    <VideoView
        android:id="@+id/videoView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">
        <EditText
            android:id="@+id/tv_user"
            android:textStyle="italic"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="user name"
            android:textColorHint="@color/dark_white"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:background="@drawable/custom_edit_text_focused"
            android:drawableStart="@drawable/custom_person_icon_focused"
            android:maxLines="1"
            android:inputType="text"
            android:drawablePadding="5dp"/>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:passwordToggleEnabled="true">
            <EditText
                android:id="@+id/tv_password"
                android:textSize="18sp"
                android:hint="password"
                android:textColor="@color/white"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:padding="4dp"
                android:background="@drawable/custom_edit_text_focused"
                android:drawableStart="@drawable/custom_lock_icon_true"
                android:maxLines="1"
                android:inputType="textPassword"
                android:ems="15"
                android:drawablePadding="5dp"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:passwordToggleEnabled="true">
            <EditText
                android:id="@+id/tv_password_confirm"
                android:textSize="18sp"
                android:hint="confirm password"
                android:textColor="@color/white"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:padding="4dp"
                android:background="@drawable/custom_edit_text_focused"
                android:drawableStart="@drawable/custom_lock_icon_true"
                android:maxLines="1"
                android:inputType="textPassword"
                android:ems="15"
                android:drawablePadding="5dp"/>
        </com.google.android.material.textfield.TextInputLayout>
        <Button
            android:id="@+id/sign_btn"
            android:textColor="@color/white"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:text="Signup"
            android:textSize="26sp"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom_gradient_button"
            android:layout_gravity="center"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/log_btn"
            android:textColor="@color/white"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:text="Login"
            android:textSize="26sp"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom_gradient_button"
            android:layout_gravity="center"
            android:textAllCaps="false"/>
    </LinearLayout>

</RelativeLayout>
